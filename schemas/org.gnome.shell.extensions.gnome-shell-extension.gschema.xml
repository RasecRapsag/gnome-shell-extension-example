      <default>2</default>
      <summary>summary</summary>
      <description>description</description>
    </key>

    <key type="b" name="icon-ani-start">
      <default>true</default>
      <summary>summary</summary>
      <description>description</description>
    </key>

  </schema>

</schemalist>